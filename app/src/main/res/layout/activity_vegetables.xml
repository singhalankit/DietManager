<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.ankit_pc.dietmanager.Vegetables">


    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Potatoes"
        android:onClick="onClickPotatoes"
        android:id="@+id/button_potatoes" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brocolli"
        android:onClick="onClickBrocolli"
        android:id="@+id/button_brocolli" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cabbage"
        android:onClick="onClickCabbage"
        android:id="@+id/button_cabbage" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carrots"
        android:onClick="onClickCarrots"
        android:id="@+id/button_carrots" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CauliFlower"
        android:onClick="onClickCauli"
        android:id="@+id/button_cauli" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sweet Corn"
        android:onClick="onClickSCorn"
        android:id="@+id/button_Scorn" />
    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cucumber"
        android:onClick="onClickCucumber"
        android:id="@+id/button_cucumber" />
    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eggplant"
        android:onClick="onClickEggplant"
        android:id="@+id/button_eggplant" />





