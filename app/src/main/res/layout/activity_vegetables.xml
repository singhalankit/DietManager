<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.ankit_pc.dietmanager.Vegetables">


    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/potato"
        android:contentDescription="@string/potato"
        android:onClick="onClickPotatoes"
        android:id="@+id/button_potatoes" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/brocolli"
        android:contentDescription="@string/brocolli"
        android:onClick="onClickBrocolli"
        android:id="@+id/button_brocolli" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cabbage"
        android:contentDescription="@string/cabbage"
        android:onClick="onClickCabbage"
        android:id="@+id/button_cabbage" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/carrot"
        android:contentDescription="@string/carrot"
        android:onClick="onClickCarrots"
        android:id="@+id/button_carrots" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cauliflower"
        android:contentDescription="@string/cauliflower"
        android:onClick="onClickCauli"
        android:id="@+id/button_cauli" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sweet_corn"
        android:contentDescription="@string/sweet_corn"
        android:onClick="onClickSCorn"
        android:id="@+id/button_Scorn" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cucumber"
        android:contentDescription="@string/cucumber"
        android:onClick="onClickCucumber"
        android:id="@+id/button_cucumber" />

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/egg_plant"
        android:contentDescription="@string/egg_plant"
        android:onClick="onClickEggplant"
        android:id="@+id/button_eggplant" />


